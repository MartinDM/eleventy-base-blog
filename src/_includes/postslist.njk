
<ol class="post-list">
{% for post in postslist | reverse %}
  <li class="post-list__item {% if post.url == url %} post-list-item--active{% endif %}">
  <h2 class="post-list__title post-title">
    <a href="{{ post.url | url }}" class="post-list__link">
        {% if post.data.title %}
          {{ post.data.title }}
        {% else %}{% endif %}
    </a>
  </h2>
  <time class="post-list__date post-date" datetime="{{ post.date | htmlDateString }}">
    {{ post.date | readableDate }}</time>
    <p class="post-list__excerpt">{% excerpt post %} </p>
  <a class="post-list__read-more" href="{{ post.url | url }}"
   aria-label="Read more on {{ post.data.title }}">Read more â†’</a>
  </li>
{% endfor %}
</ol>
 